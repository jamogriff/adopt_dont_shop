<h2><%= @details.name %> | <%= @details.city %></h2>

<section id="data">
  <h3>Statistics</h3>
  <div id="adoptable">
    <h5>Adoptable Pets</h5>
    <strong>Average Age: <%= @shelter.adoptable_avg_age.round(1) %></strong><br>
    <strong><%= @shelter.adoptable_count %> pets ready to be adopted!</strong>
  </div>
  <div id="adopted">
    <h5>Adoption Counter</h5>
    <strong><%= @shelter.number_adopted %> Pets Saved</strong>
  </div>
</section>

<section id="action-area">
  <h3>Dashboard</h3>
    <%= @shelter.pets_not_reviewed.each do |pet| %>
      <div id="pet-<%= pet.id %>">
        <strong>pet.name</strong>
        <p>Applications Waiting:</p>
        <ul>
        <%= pet.pending_applications.each do |app| %>
          <li>
            <%= link_to "#{app.name} from #{app.city}", "/admins/applications/#{app.id}" %>
          </li>
        <% end %>
        </ul>
      </div>
    <% end %>
</section>
